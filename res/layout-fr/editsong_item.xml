<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<ImageView android:src="@drawable/gflat_note" 
	android:layout_width="36dp" android:layout_height="36dp"
	android:id="@+id/icon"
	android:layout_alignParentRight="true"
	android:layout_centerVertical="true"
/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true"
	android:id="@+id/title"
	android:textColor="#FFFFFF" android:textSize="22dp"
	android:singleLine="true" android:text="Nom de la chanson"/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:id="@+id/subtitle"
	android:layout_below="@id/title"
	android:textColor="#FFFFFF" android:textSize="15dp"
	android:singleLine="true" android:text="Auteur"/>

</RelativeLayout>