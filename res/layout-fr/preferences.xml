		<CheckBoxPreference
	            android:key="MP3Plugin.simplestream"
	            android:title="Diffusion en continu simples de MP3"
	            android:defaultValue="false"
	            android:summary="Utilisation Diffusion en continu simples de AndroidOS. Plus limitées, mais peut-être plus stable."
	            />
		</PreferenceCategory>
		<PreferenceCategory
			android:title="SID"
			android:key="SidPlugin"
		>
		<ListPreference
	            android:key="SidPlugin.engine"
	            android:title="SID Engine"
	            android:defaultValue="VICE"
