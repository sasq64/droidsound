    <CheckBoxPreference
            android:key="speech"
            android:title="Discours"
            android:defaultValue="false"
            android:summary="Utilisez le texte-parole pour parler des titres de chansons"
            />
            
	<EditTextPreference
			android:numeric="integer"
            android:key="default_length"
            android:title="Durée de la chanson par défaut"
            android:dialogTitle="Longueur (en secondes)"
            android:defaultValue="900"
            android:summary="Longueur à utiliser lorsque la longueur réelle est inconnue."
	/>

    <ListPreference
            android:key="buffer"
            android:title="Taille du tampon"
            android:summary="Taille du tampon sonore. Augmenter la valeur pour éviter de sauter des sons"
            android:defaultValue="Long"
            android:entries="@array/buffer_opts"
			android:entryValues="@array/buffer_opts"
            android:summaryOn="Audio buffer size"
            />

	<PreferenceScreen
            android:key="audio_prefs"
