<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ImageView  
	android:layout_width="36dp" android:layout_height="36dp"
	android:id="@+id/icon"
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"
/>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:layout_alignParentTop="true"
	android:layout_toRightOf="@id/icon"
	android:id="@+id/title"
	android:textColor="#FFFFFF" android:textSize="22dp"
/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:layout_toRightOf="@id/icon"
	android:id="@+id/subtitle"
	android:layout_below="@id/title"
	android:textColor="#FFFFFF" android:textSize="15dp"
/>

<TextView android:layout_width="wrap_content" android:layout_height="45dp"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true"
	android:gravity="bottom"
	android:id="@+id/sidetitle"
	android:textColor="#a0a0a0" android:textSize="15dp"
	android:layout_marginRight="8dp"
/>

</RelativeLayout>
