            android:key="speech"
            android:title="音声"
            android:defaultValue="false"
            android:summary="テキストを音声に変換を使用して、DroidSoundは曲の演奏の名前を話すだろう。"
            />
            
	<EditTextPreference
			android:numeric="integer"
            android:key="default_length"
            android:title="デフォルトの曲の長さ"
            android:dialogTitle="長さ（秒単位）"
            android:defaultValue="900"
            android:summary="実際の長さが不明なときに使用する長さ。"
	/>

    <ListPreference
            android:key="buffer"
            android:title="オーディオ入出力のバッファサイズ"
            android:summary="サウンドバッファのサイズ。オーディオのスキップを避けるために増加する。"
            android:defaultValue="Long"
            android:entries="@array/buffer_opts"
			android:entryValues="@array/buffer_opts"
            android:summaryOn="オーディオバッファのサイズ"
            />

