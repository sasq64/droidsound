<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="main_prefs">
    <CheckBoxPreference
            android:key="extensions"
            android:title="未知の拡張機能"
            android:defaultValue="false"
            android:summary="未知の拡張子を持つインデックスファイル"
            />
